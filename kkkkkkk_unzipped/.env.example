# KYCtrust Platform Environment Variables
# Copy this file to .env and fill in your actual values

# =====================================================
# REQUIRED - These MUST be set for the app to work
# =====================================================

# Supabase Configuration (Required)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# =====================================================
# OPTIONAL - These have defaults but can be customized
# =====================================================

# Application Settings
VITE_APP_NAME=KYCtrust
VITE_APP_DESCRIPTION=Digital Financial Services Platform
VITE_APP_URL=https://kyctrust.vercel.app

# Contact Information
VITE_WHATSAPP_NUMBER=+966501234567
VITE_SUPPORT_EMAIL=support@kyctrust.com
VITE_CONTACT_PHONE=+966501234567
VITE_ADMIN_EMAIL=admin@kyctrust.com

# API Configuration
VITE_API_URL=/api
VITE_API_TIMEOUT=30000

# Feature Flags
VITE_DEBUG_MODE=false
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PWA=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_MULTILANG=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_OFFLINE_MODE=false

# Performance Settings
VITE_CACHE_TIMEOUT=300000

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=

# Build Information
VITE_BUILD_VERSION=2.0.0
VITE_BUILD_ENVIRONMENT=production

# =====================================================
# ADVANCED - Only needed for advanced features
# =====================================================

# Supabase Advanced (Optional)
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_JWT_SECRET=

# PostgreSQL Direct Connection (Optional)
POSTGRES_URL=
POSTGRES_URL_NON_POOLING=
POSTGRES_PRISMA_URL=
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
POSTGRES_HOST=
POSTGRES_DATABASE=postgres

# Security (Optional)
VITE_ENCRYPTION_KEY=
VITE_JWT_SECRET=

# Admin Configuration (Optional)
ADMIN_PASSWORD=

# =====================================================
# DEPLOYMENT NOTES
# =====================================================
# 
# For Vercel:
# - Set these in your Vercel dashboard under Settings > Environment Variables
# - Make sure to add both Production and Preview environments
#
# For Netlify:
# - Set these in your Netlify dashboard under Site settings > Environment variables
#
# For other hosting platforms:
# - Check their documentation for setting environment variables
# - Make sure all VITE_ prefixed variables are available at build time
